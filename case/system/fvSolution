solvers
{
    // ===============================
    // Phase fractions
    // ===============================
    "alpha.*"
    {
        nAlphaSubCycles 1;
        cAlpha          0;
    }

    // ===============================
    // Pressure
    // ===============================
    p_rgh
    {
        solver          GAMG;
        tolerance       1e-7;
        relTol          0.05;

        smoother        GaussSeidel;

        // smoother stability
        agglomerator    faceAreaPair;
        mergeLevels     1;
    }

    p_rghFinal
    {
        solver          GAMG;
        tolerance       1e-8;
        relTol          0;

        smoother        GaussSeidel;
        agglomerator    faceAreaPair;
        mergeLevels     1;
    }


    // ===============================
    // Velocity
    // ===============================
    U
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        tolerance       1e-10;
        relTol          0;
        nSweeps         3;      // Mushy zone → more sweeps
    }

    UFinal
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        tolerance       1e-8;
        relTol          0;
        nSweeps         3;
    }

    // ===============================
