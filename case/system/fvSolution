    //}

    // ===============================
    // Enthalpy
    // ===============================
    h
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        tolerance       1e-9;
        relTol          0.01;
        nSweeps         1;
    }

    hFinal
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        tolerance       1e-9;
        relTol          0;
        nSweeps         1;
    }

    // ===============================
    // Solid fraction (NO solver!)
    // ===============================
    // fs wird NICHT gelöst
    // → Kein fs-Block notwendig!
    pcorr
{
    solver          PCG;
    preconditioner  DIC;
    tolerance       1e-06;
    relTol          0;
}

pcorrFinal
{
    $pcorr;   // Verweise einfach auf oben
